<style>
    .login {
        margin: 100px auto;
        width: 500px;
    }

    .login-screen {
        background-color: rgb(236, 252, 236);
        padding: 20px;
        border-radius: 5px
    }

    .app-title {
        font-size: 3em;
        text-align: center;
        color: #777;
    }

    .login-form {
        text-align: center;
    }

    .control-group {
        margin-bottom: 10px;
    }

    label {
        font-size: 20px;
    }

    input {
        text-align: center;
        background-color: #ECF0F1;
        border: 2px solid transparent;
        border-radius: 3px;
        font-size: 20px;
        font-weight: 200;
        width: 250px;
        transition: border .5s;
    }

    input:focus {
        border: 2px solid #3498DB;
        box-shadow: none;
    }

    .btn1 {
        border: 2px solid transparent;
        background: #3498DB;
        color: #ffffff;
        font-size: 16px;
        line-height: 25px;
        padding: 10px 0;
        text-decoration: none;
        text-shadow: none;
        border-radius: 3px;
        box-shadow: none;
        transition: 0.25s;
        display: block;
        width: 250px;
        margin: 0 auto;
    }

    .btn1:hover {
        background-color: #2980B9;
    }

    .login-link {
        font-size: 12px;
        color: #444;
        display: block;
        margin-top: 12px;
    }
</style>
{{#if msg}}
    <div class="alert alert-{{msg.type}}">{{msg.info}}</div>
{{/if}}
<div class="login">
    <div class="login-screen">
        <form method="post">
            <div class="login-form">
            <div class="control-group">
                <label class="login-field-icon fui-user" for="user">輸入帳號：</label>
            </div>
            <div class="control-group">
                <input type="text" class="login-field" value="{{addForm.admin_id}}" id="admin_id" name="admin_id">
            </div>

            <div class="control-group">
                <label class="login-field-icon fui-lock" for="password">輸入密碼：</label>
            </div>
            <div class="control-group">
                <input type="password" class="login-field" value="{{addForm.password}}" id="password" name="password">
            </div>
            <button type="submit" class="btn1 btn-primary btn-large btn-block">註冊</button>
        </div>
        </form>
        
    </div>
</div>