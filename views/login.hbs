<style>
    .login {
        margin: 100px auto;
        width: 500px;
    }

    .login-screen {
        background-color: rgb(252, 253, 229);
        padding: 20px;
        border-radius: 5px
    }

    .app-title {
        font-size: 3em;
        text-align: center;
        color: #777;
    }

    .login-form {
        text-align: center;
    }

    .control-group {
        margin-bottom: 10px;
    }

    label {
        font-size: 20px;
    }

    input {
        text-align: center;
        background-color: #ECF0F1;
        border: 2px solid transparent;
        border-radius: 3px;
        font-size: 20px;
        font-weight: 200;
        width: 250px;
        transition: border .5s;
    }

    input:focus {
        border: 2px solid #3498DB;
        box-shadow: none;
    }

    .btn1 {
        border: 2px solid transparent;
        background: #3498DB;
        color: #ffffff;
        font-size: 16px;
        line-height: 25px;
        padding: 10px 0;
        text-decoration: none;
        text-shadow: none;
        border-radius: 3px;
        box-shadow: none;
        transition: 0.25s;
        display: block;
        width: 250px;
        margin: 0 auto;
    }

    .btn1:hover {
        background-color: #2980B9;
    }

    .login-link {
        font-size: 12px;
        color: #444;
        display: block;
        margin-top: 12px;
    }
</style>

{{#if flashMsg}}
<div class="login-form alert alert-{{flashMsg.type}}" role="alert">
    {{flashMsg.msg}}
</div>
{{/if}}

{{#if loginUser}}
<div style="margin:5em;text-align:center">
    <h1>歡迎回來!!{{loginUser}}</h1>
</div>
{{else}}
<div class="login">
    <div class="login-screen">
        {{!-- <div class="app-title">
            <h1>登入</h1>
        </div> --}}
        <form method="post">
            <div class="login-form">
            <div class="control-group">
                <label class="login-field-icon fui-user" for="user">帳號：</label>
            </div>
            <div class="control-group">
                <input type="text" class="login-field" id="user" name="user">
            </div>

            <div class="control-group">
                <label class="login-field-icon fui-lock" for="password">密碼：</label>
            </div>
            <div class="control-group">
                <input type="password" class="login-field" id="password" name="password">
            </div>
            <button type="submit" class="btn1 btn-primary btn-large btn-block">登入</button>
            <a class="btn1 btn-primary btn-large btn-block" href="/signup">尚未註冊</a>
        </div>
        </form>
        
    </div>
</div>
{{/if}}