<style>
    div{
        width: 80%;
        margin: 20px auto;
    }
    p {
        text-indent: 2em;
    }
</style>
{{#each blog}}
<div class="blogview">
    <hr>
    <h3><a href="/user-blog/edit/{{title}}"><i class="fas fa-pen"></i></a></h3>
    <h3 style="float: right"><a href="javascript:remove_item('{{title}}')"><i class="fas fa-trash" style="color: brown"></i></a></h3>
    <h1>{{title}}</h1>
    <p>{{message}}</p>
    <h6>{{createtime}}</h6>
    <hr>
</div>
{{/each}}
<div>
    <form method="post">
        <div class="control-group">
            <label class="login-field-icon fui-user" for="title">標題：</label>
            <input type="text" class="login-field" id="title" name="title">
        </div>

        <div class="control-group">
            <label class="login-field-icon fui-lock" for="message">內容：</label>
            <textarea name="message" id="message" cols="100" rows="5" style="resize: none;"></textarea>
        </div>
        <div>
        <button type="submit" class="btn btn-primary">發布</button>
        </div>
    </form>
</div>
<script>
    function remove_item(title) {
    if (confirm("確定刪除<<" + title + ">>篇文章?")) {
      location.href = '/user-blog/remove/'+ title;
    }
  }
</script>